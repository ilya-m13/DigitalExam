@model DigitalExam.Models.Question

@{
    ViewData["Title"] = "EditQuestion";
}

<h1>Edit Question</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditQuestion">
            <input type="hidden" name="qst_id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
            </div>
            <div class="form-group">
                <label asp-for="Answers" class="control-label">Answers</label>
                @for (int i = 0; i < Model.Answers.Count; i++)
                {
                    <input asp-for="Answers" class="form-control" value="@Model.Answers[i]" />
                    <a asp-action="DeleteAnswer" asp-route-qst_id="@Model.Id" asp-route-ans_id="@i">Delete</a>
                }
            </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer" class="control-label">Correct Answer</label>
                <input asp-for="CorrectAnswer" class="form-control" value="@Model.CorrectAnswer" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <a asp-action="AddAnswer" asp-route-qst_id="@Model.Id">Add Answer</a>
    </div>
</div>

<div>
    <a asp-action="EditExam" asp-route-id="@Model.ExamId">Back to Edit Exam</a>
</div>